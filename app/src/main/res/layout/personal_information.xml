<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimen_5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/windowBackgroundDark">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_personal_info_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/personal_info_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter personal information and earn \n 2 credit score points"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/josefin_sans"
                app:layout_constraintTop_toTopOf="parent"
                 android:layout_margin="@dimen/dimen_10dp"/>

            <LinearLayout
                android:id="@+id/personal_info_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/personal_info_title">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Next of Kin :"
                            android:textSize="15sp"

                            android:gravity="center_vertical"
                            android:background="@android:color/transparent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp">

                        <EditText
                            android:id="@+id/next_of_kin_et"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:inputType="text"
                            android:hint="First Name"
                            android:padding="4dp"
                            android:textSize="14sp"
                            android:background="@drawable/edittext_corner" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp">


                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:inputType="text"
                            android:textSize="14sp"
                            android:hint="Last Name"
                            android:padding="4dp"
                            android:background="@drawable/edittext_corner" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">



                        <LinearLayout
                            android:id="@+id/village_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".6"
                            android:layout_gravity="center_vertical">
                            <TextView
                                android:id="@+id/village_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Next of Kin Contact:"
                                android:textSize="15sp"
                                android:gravity="center_vertical"
                                android:background="@android:color/transparent"/>
                        </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight=".4">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/edittext_corner"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/text_country_code"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:background="@drawable/edittext_left_corners_green"
                                android:gravity="center"
                                android:text="+256"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:padding="6dp"
                                android:background="@android:color/transparent"
                                android:inputType="phone"
                                android:textSize="14sp"
                                android:maxLength="9"/>
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/buttons_farmer_profiling_step2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/personal_info_form">
                    <Button
                        android:layout_weight="1"
                        android:id="@+id/previous_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@drawable/rectangular_green_solid"
                        android:text="@string/submit" />

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/next_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/cancel"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@drawable/rectangular_red_solid"/>
                </LinearLayout>
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</LinearLayout>