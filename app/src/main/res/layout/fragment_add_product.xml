<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_background">
    <LinearLayout
        android:id="@+id/layout_add_money"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:background="@drawable/top_rounded_blue">

        <TextView
            android:id="@+id/add_product_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:gravity="center"
            android:text="ADD PRODUCT"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="true"/>
        <ImageView
            android:id="@+id/add_product_close"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight=".9"
            android:layout_gravity="end|center"
            android:layout_margin="5dp"
            android:src="@drawable/ic_close_white" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:paddingBottom="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Manufacturer"
                        android:textColor="@color/textColorSecondaryLight"
                        android:textSize="16sp" />



                    <TextView
                        android:id="@+id/etxt_product_manufucturer"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/edittext_corner"
                        android:inputType="textCapWords"
                        android:padding="10dp"
                        android:layout_marginBottom="10dp"
                        android:drawableEnd="@drawable/ic_add_circle"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Category"
                        android:textColor="@color/textColorSecondaryLight"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/etxt_product_category"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/edittext_corner"
                        android:inputType="textCapWords"
                        android:padding="10dp"
                        android:layout_marginBottom="10dp"
                        android:drawableEnd="@drawable/ic_add_circle"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Name"
                        android:textColor="@color/textColorSecondaryLight"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/etxt_product_name"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/edittext_corner"
                        android:inputType="textCapWords"
                        android:padding="10dp"
                        android:layout_marginBottom="10dp"
                        android:drawableEnd="@drawable/ic_add_circle"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@string/product_code"
                        android:textColor="@color/textColorSecondaryLight"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/edittext_corner"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_marginBottom="10dp">



                        <EditText
                            android:id="@+id/etxt_product_code"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_weight="2"
                            android:inputType="text"
                            android:padding="10dp"
                            android:background="@color/transparent" />



                        <ImageView
                            android:id="@+id/img_scan_code"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="8"
                            android:layout_marginEnd="10dp"
                            app:srcCompat="@drawable/new_barcode"
                            android:visibility="gone"/>
                    </LinearLayout>
                </LinearLayout>


            <LinearLayout
            android:id="@+id/measurement_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Measurement"
                    android:textColor="@color/textColorSecondaryLight"
                    android:textSize="16sp" />



                <EditText
                    android:id="@+id/etxt_product_measurement"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/edittext_corner"
                    android:inputType="number"
                    android:padding="10dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Units"
                    android:textSize="16sp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/rectangular_blue_solid"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="3.4dp">

                    <Spinner
                        android:id="@+id/product_units"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:entries="@array/product_measurement_unit"
                        android:gravity="center"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="10dp"
                        app:srcCompat="@drawable/ic_baseline_arrow_drop_down_24"
                        tools:ignore="VectorDrawableCompat" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Purchase Price"
                        android:textColor="@color/textColorSecondaryLight"
                        android:textSize="16sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/edittext_corner"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".4"
                            android:background="@drawable/edittext_left_corners_green"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="UGX"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etxt_buy_price"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".6"
                            android:background="@color/transparent"
                            android:inputType="text"
                            android:padding="8dp" />


                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Selling price"
                        android:textColor="@color/textColorSecondaryLight"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/edittext_corner"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="@drawable/edittext_left_corners_green"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="UGX"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etxt_product_sell_price"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:background="@color/transparent"
                            android:inputType="text"
                            android:padding="8dp" />


                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="In-Stock"
                        android:textColor="@color/textColorSecondaryLight"
                        android:textSize="16sp" />



                    <EditText
                        android:id="@+id/etxt_product_stock"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/edittext_corner"
                        android:inputType="number"
                        android:padding="10dp"
                        android:layout_marginBottom="10dp"/>

                </LinearLayout>
            </LinearLayout>
               <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Product Image"
                        android:textColor="@color/textColorSecondaryLight"
                        android:textSize="16sp"
                        android:layout_marginBottom="5dp"/>

           <androidx.cardview.widget.CardView
                android:id="@+id/image_view_holder"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="15dp"
                android:visibility="visible"
                app:cardCornerRadius="@dimen/dimen_5dp">


                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:padding="5dp"
                    app:srcCompat="@drawable/add_default_image"
                    tools:ignore="VectorDrawableCompat" />


           </androidx.cardview.widget.CardView>
               </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/select_supplier"
                android:textColor="@color/textColorSecondaryLight"
                android:textSize="16sp"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/etxt_supplier"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittext_corner"
                android:drawableRight="@drawable/drop_down"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/creditCardBackground"
                android:textSize="18sp"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/layout_submit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:background="@drawable/rectangular_blue_solid"
                android:visibility="visible"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/tx_add_product"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/submit"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:background="@color/transparent" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>