<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        tools:context="com.cabral.emaishapay.fragments.wallet_fragments.WalletHomeFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4fafe">
        <RelativeLayout
            android:id="@+id/layout_pattern"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_new_bg_pattern"
            android:alpha=".035">

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">


            <com.cabral.emaishapay.customs.CircularImageView
                android:id="@+id/img_username"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/user"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="18dp"/>
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Hello John,"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/img_username"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/username_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="View Account details"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/img_username"
                android:layout_below="@id/username"
                android:drawableEnd="@drawable/drop_down"
                android:drawablePadding="4dp"
                android:drawableTint="@color/colorPrimary"
                android:alpha="0.6"/>
        </RelativeLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_money_transfers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_username"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_topUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/layout_transfer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/image_topup"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_topup"
                    app:layout_constraintBottom_toTopOf="@id/label_topup"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/round_button_dark_green"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/label_topup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/josefin_sans"
                    android:text="TOPUP"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/image_topup" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_transfer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/layout_pay"
                app:layout_constraintStart_toEndOf="@id/layout_topUp"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/image_transfer"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_button_dark_green"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_transfer"
                    app:layout_constraintBottom_toTopOf="@id/label_transfer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/label_transfer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/josefin_sans"
                    android:text="@string/transfer"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/image_transfer" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_settle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/layout_pay"
                app:layout_constraintStart_toEndOf="@id/layout_topUp"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/image_settle"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_button_dark_green"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_settle"
                    app:layout_constraintBottom_toTopOf="@id/label_settle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/label_settle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/josefin_sans"
                    android:text="@string/settle"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/image_settle" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_pay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/layout_loan"
                app:layout_constraintStart_toEndOf="@id/layout_transfer"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/image_pay"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_button_dark_green"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_pay"
                    app:layout_constraintBottom_toTopOf="@id/label_pay"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/label_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/josefin_sans"
                    android:text="@string/pay"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/image_pay" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_loan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/layout_beneficiaries"
                app:layout_constraintStart_toEndOf="@id/layout_pay"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/image_loan"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_button_dark_green"
                    android:padding="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic_loan_1_"
                    app:layout_constraintBottom_toTopOf="@id/label_loan"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/label_loan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/josefin_sans"
                    android:text="Loan"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/image_loan" />

            </androidx.constraintlayout.widget.ConstraintLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_beneficiaries"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/layout_loan"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/image_beneficiaries"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_button_dark_green"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic_beneficiaries"
                    app:layout_constraintBottom_toTopOf="@id/label_beneficiaries"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/label_beneficiaries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/josefin_sans"
                    android:text="Beneficiaries"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/image_beneficiaries" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/label_transact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_money_transfers"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Transact with Customers"
            android:textColor="@color/colorPrimary"
            android:visibility="gone"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_transact_with_customers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_transact"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/rectangular_blue_solid"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:visibility="gone">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_account_opening"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/layout_loan_app"
                app:layout_constraintEnd_toStartOf="@id/layout_deposits"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:onClick="openAgentCustomerAccountOpening">

                <ImageView
                    android:id="@+id/image_account_opening"
                    android:layout_width="16dp"
                    android:layout_height="20dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_account_opening"
                    app:layout_constraintBottom_toTopOf="@id/label_account_opening"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/label_account_opening"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Account \n Opening"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:maxLines="2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/image_account_opening" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_deposits"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toStartOf="@id/layout_funds_transfers"
                app:layout_constraintStart_toEndOf="@id/layout_account_opening"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/layout_withdraw"
                android:onClick="openAgentCustomerDeposit">

                <ImageView
                    android:id="@+id/image_deposits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_deposit2"
                    app:layout_constraintBottom_toTopOf="@id/label_deposits"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/white"/>

                <TextView
                    android:id="@+id/label_deposits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/josefin_sans"
                    android:text="Deposit"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/image_deposits" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_funds_transfers"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/layout_deposits"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/layout_balance_inquiry"
                android:onClick="openAgentCustomerFundsTransfer">

                <ImageView
                    android:id="@+id/image_funds_transfers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_funds"
                    app:layout_constraintBottom_toTopOf="@id/label_funds_transfers"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/white"/>

                <TextView
                    android:id="@+id/label_funds_transfers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/josefin_sans"
                    android:text="Send"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:gravity="center_horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/image_funds_transfers" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_loan_app"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/layout_deposits"
                app:layout_constraintTop_toBottomOf="@id/layout_account_opening"
                android:onClick="openAgentCustomerLoanApplication">

                <ImageView
                    android:id="@+id/image_loan_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:src="@drawable/ic_loan2"
                    app:layout_constraintBottom_toTopOf="@id/label_loan_app"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/label_loan_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/josefin_sans"
                    android:gravity="center_horizontal"
                    android:text="Loan \n Application"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/image_loan_app" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_withdraw"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/layout_loan_app"
                app:layout_constraintTop_toBottomOf="@id/layout_deposits"
                app:layout_constraintEnd_toStartOf="@id/layout_balance_inquiry"
                android:onClick="openAgentCustomerWithdraw">

                <ImageView
                    android:id="@+id/image_withdraw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_withdrawal"
                    app:layout_constraintBottom_toTopOf="@id/label_withdraw"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/white"/>

                <TextView
                    android:id="@+id/label_withdraw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/josefin_sans"
                    android:text="Withdraw"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/image_withdraw" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_balance_inquiry"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/layout_withdraw"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_funds_transfers"
                android:onClick="openAgentCustomerBalanceInquiry">

                <ImageView
                    android:id="@+id/image_balance_inquiry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_balance"
                    app:layout_constraintBottom_toTopOf="@id/label_balance_inquiry"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/white"/>

                <TextView
                    android:id="@+id/label_balance_inquiry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/josefin_sans"
                    android:text="Balance \n Inquiry"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/image_balance_inquiry" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/layout_balance_label_visibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_transact_with_customers"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="25dp">
            <TextView
                android:id="@+id/label_balance_and_saving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balance and saving"
                android:textColor="@color/colorPrimary"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/img_amount_visibile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_eye"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
            <ImageView
                android:id="@+id/img_amount_blur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_invisible_eye"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:visibility="gone"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/layout_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_balance_label_visibility"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/rectangular_blue_solid"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Available Balance"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/total_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="UGX 0.0"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_centerInParent="true"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Wallet"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:autoSizeTextType="uniform" />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">
                    <TextView
                        android:id="@+id/wallet_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/josefin_sans"
                        android:layout_centerHorizontal="true"
                        android:paddingBottom="5dp"
                        android:text="UGX 0"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DDDDDD" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/card_balance_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Card"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:autoSizeTextType="uniform" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">
                    <TextView
                        android:id="@+id/card_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/josefin_sans"
                        android:layout_centerHorizontal="true"
                        android:paddingBottom="5dp"
                        android:text="UGX 0"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_recent_transactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_balance"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Transactions"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_last_transactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_recent_transactions"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="18dp">

            <RelativeLayout
                android:id="@+id/layout_last_credit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:background="@drawable/rectangular_solid_light_blue">

                <LinearLayout
                    android:id="@+id/layout_top_credit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:background="@drawable/rounded_rectangle_green_background">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_credit_arrow_down"
                        app:tint="@color/white"
                        android:layout_weight=".2"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#A4D9F8"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Credit"
                        android:textColor="@color/white"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/text_credit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="John Kiwanuka"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:layout_below="@id/layout_top_credit"/>
                <TextView
                    android:id="@+id/text_amount_credit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+ UGX 10,200"
                    android:textColor="#30DB51"
                    android:textSize="15sp"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:layout_below="@id/text_credit_name"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="24 Feb 2021 14:23 PM"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:layout_below="@id/text_amount_credit"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_last_debit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:background="@drawable/rectangular_background_danger">

                <LinearLayout
                    android:id="@+id/layout_top_debit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:background="@drawable/rectangular_solid_red_debit">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_debit_arrow_up"
                        app:tint="@color/white"
                        android:layout_weight=".2"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#A4D9F8"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Debit"
                        android:textColor="@color/white"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/text_debit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="John Kiwanuka"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:layout_below="@id/layout_top_debit"/>
                <TextView
                    android:id="@+id/text_amount_debit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- UGX 10,200"
                    android:textColor="#FF5353"
                    android:textSize="15sp"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:layout_below="@id/text_debit_name"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="24 Feb 2021 14:23 PM"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:layout_below="@id/text_amount_debit"/>


            </RelativeLayout>



        </LinearLayout>

        <TextView
            android:id="@+id/text_popular_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Popular Products"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="20dp"
            android:padding="10dp"
            android:layout_below="@id/layout_last_transactions"
            android:background="@drawable/rectangular_blue_solid"
            android:visibility="gone"/>


        <LinearLayout
            android:id="@+id/img_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginTop="15dp"
            android:layout_below="@id/text_popular_products">

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/product_cover_slider"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/background_round_white"
                custom:auto_cycle="true"
                custom:indicator_visibility="visible" />

        </LinearLayout>


    </RelativeLayout>
    </ScrollView>
</layout>