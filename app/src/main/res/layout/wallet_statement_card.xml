<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccentLight">


    <LinearLayout
        android:id="@+id/layout_statement_card"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:paddingTop="14dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp"
        android:background="@drawable/solidwhite_shape"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_view_date_transaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nov 20, 2020"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />



        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:id="@+id/layout_debit_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginBottom="2dp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="7"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="4.5"
                        android:gravity="start"
                        android:text="Debit"
                        android:textSize="14sp"
                        android:fontFamily="@font/josefin_sans"
                        android:textColor="@color/device_problem" />

                    <TextView
                        android:id="@+id/text_view_debit_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:text="- UGX 0"
                        android:textSize="14sp"
                        android:fontFamily="@font/josefin_sans"
                        android:textColor="@color/device_problem" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="7"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/paid_to_bought_from"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4.5"
                        android:gravity="start"
                        android:text="Paid To"
                        android:textSize="14sp"
                        android:fontFamily="@font/josefin_sans"
                        android:textColor="@color/textColor"
                        />

                    <TextView
                        android:id="@+id/text_view_debit_paid_to"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:text="Someone"
                        android:textSize="14sp"
                        android:fontFamily="@font/josefin_sans"
                        android:textColor="@color/textColor"
                        />


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_home_credit_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="5dp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="7"
                    android:orientation="horizontal"
                    android:layout_marginBottom="2sp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4.5"
                        android:gravity="start"
                        android:text="Credit"
                        android:textSize="14sp"
                        android:fontFamily="@font/josefin_sans"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/text_view_credit_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:text="+ UGX 0"
                        android:textSize="14sp"
                        android:fontFamily="@font/josefin_sans"
                        android:textColor="@color/colorPrimary" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="7"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4.5"
                        android:gravity="start"
                        android:text="Received From"
                        android:textSize="14sp"
                        android:fontFamily="@font/josefin_sans"
                        android:textColor="@color/textColor"

                        />

                    <TextView
                        android:id="@+id/text_view_credit_received_from"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:textSize="14sp"
                        android:fontFamily="@font/josefin_sans"
                        android:text="Someone"
                        android:textColor="@color/textColor"
                        />


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="7"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.5"
                    android:gravity="start"
                    android:text="Reference Number"
                    android:textSize="14sp"
                    android:fontFamily="@font/josefin_sans"
                    android:textColor="@color/textColor"/>

                <TextView
                    android:id="@+id/text_view_reference_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="Someone"
                    android:textSize="14sp"
                    android:fontFamily="@font/josefin_sans"
                    android:textColor="@color/textColor"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_view_receipt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="Receipt"
                    android:textAllCaps="false"
                    android:background="@drawable/rectangular_green_solid"
                    android:textColor="@color/white"
                    android:fontFamily="@font/josefin_sans"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_view_time_transaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="13:00 AM"
                    android:textSize="12sp"
                    android:gravity="end" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
