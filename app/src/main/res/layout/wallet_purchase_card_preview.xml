<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="6dp"
    app:cardElevation="0dp"
    android:layout_margin="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_margin="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/text_view_purchase_preview_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Error ..."
                    android:visibility="gone"
                    android:textColor="@color/device_problem"
                    android:textSize="14sp"
                    android:gravity="center_horizontal" />

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:text="Status :"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/text_view_id_type"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="Successful"
                        android:alpha="1.0"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="5dp"
                    android:background="#31244A"
                    android:alpha=".05"
                    android:visibility="visible"/>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:text="Reference ID :"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"/>

                     <TextView
                        android:id="@+id/text_view_id_number"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="123456789025"
                        android:alpha="1.0"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="5dp"
                    android:background="#31244A"
                    android:alpha=".05"
                    android:visibility="visible"/>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:text="Receipt ID :"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/text_view_expiry_date"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="001230"
                        android:alpha="1.0"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="5dp"
                    android:background="#31244A"
                    android:alpha=".05"
                    android:visibility="visible"/>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:text="Service :"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/text_view_purchase_service"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="Purchase"
                        android:alpha="1.0"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="5dp"
                    android:background="#31244A"
                    android:alpha=".05"
                    android:visibility="visible"/>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:text="Paid To :"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/text_view_purchase_preview_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="Kalin Farms"
                        android:alpha="1.0"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="5dp"
                    android:background="#31244A"
                    android:alpha=".05"
                    android:visibility="visible"/>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:text="Transaction Amount :"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/txt_view_bill_preview_total"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="UGX 0"
                        android:alpha="1.0"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="5dp"
                    android:background="#31244A"
                    android:alpha=".05"
                    android:visibility="visible"/>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:text="Purchase Date :"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/text_view_purchase_date_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="2019/01/01  23:00pm"
                        android:alpha="1.0"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="5dp"
                    android:background="#31244A"
                    android:alpha=".05"
                    android:visibility="visible"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/filter_dialog_footer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="18dp">

                <Button
                    android:id="@+id/cancel_btn"
                    android:layout_weight="0.33"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/ok"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/rectangular_red_solid"
                    android:gravity="center"
                    android:layout_marginEnd="5dp"/>


                <Button
                    android:id="@+id/button_add_money"
                    android:layout_weight="0.33"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:text="Print Receipt"
                    android:textAllCaps="true"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/rectangular_purple_solid"
                    android:gravity="center" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="30dp"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_corners_button"
                android:gravity="right"
                android:visibility="gone">

                <Button

                    style="@style/Button_DW"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:backgroundTint="@color/textColor"
                    android:text="Print Receipt"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/button_text_size" />

                <ImageView
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right|center_vertical"
                    android:layout_margin="10dip"
                    android:src="@drawable/ic_right_chevron">

                </ImageView>

            </FrameLayout>

        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>