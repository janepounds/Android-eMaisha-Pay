<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f4fafe">

    <ImageView
        android:src="@drawable/ic_new_bg_pattern"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:alpha="0.035"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/account_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:maxLines="1"
                android:text="My Account"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />
            <RelativeLayout
                android:id="@+id/layout_account_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_below="@id/account_title">
            <TextView
                android:id="@+id/label_account_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:maxLines="1"
                android:text="Account Type : "
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />
                <TextView
                    android:id="@+id/text_account_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Merchant"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@id/label_account_type"/>
                <TextView
                    android:id="@+id/text_change_account_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Change"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_personal_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:layout_below="@id/layout_account_type"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                app:cardCornerRadius="20dp">
                <RelativeLayout
                    android:id="@+id/layout_personal_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp"
                    android:paddingTop="4dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/personal_info_img"
                        android:layout_width="97dp"
                        android:layout_height="107dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:padding="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">
                        <ImageView
                            android:id="@+id/user_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/user"
                            android:scaleType="centerCrop"/>
                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/personal_info_img"
                        android:text="Username "
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"
                        android:layout_marginBottom="5dp"/>
                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorPrimary"
                        android:alpha=".79"
                        android:layout_below="@id/user_name"
                        android:layout_toEndOf="@id/personal_info_img"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="10dp"/>
                    <TextView
                        android:id="@+id/user_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/view1"
                        android:layout_toEndOf="@id/personal_info_img"
                        android:layout_margin="12dp"
                        android:text="+256704 000 000"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:alpha="0.5"/>
                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorPrimary"
                        android:alpha=".79"
                        android:layout_below="@id/user_phone"
                        android:layout_toEndOf="@id/personal_info_img"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="10dp"/>
                    <TextView
                        android:id="@+id/user_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/view2"
                        android:layout_toEndOf="@id/personal_info_img"
                        android:text="Location"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:alpha="0.5"/>
                    <TextView
                        android:id="@+id/view_more_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="View More"
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@id/personal_info_img"
                        android:layout_below="@id/user_location"
                        android:drawableEnd="@drawable/drop_down"
                        android:drawablePadding="4dp"
                        android:drawableTint="@color/colorPrimary"
                        android:alpha="0.6"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_employment_business_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@color/white"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/card_view_personal_info"
                app:cardCornerRadius="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/layout_employment_business_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp">


                    <TextView
                        android:id="@+id/employment_business_info_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Employment &amp; Business Info "
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:alpha="0.8"/>
                    <ImageView
                        android:id="@+id/chevron_employment_business_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_right_arrow_green"/>

                </RelativeLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_employment_business_info_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/layout_employment_business_info"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingStart="5dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="10dp"
                    android:background="#f8f8ff"
                    android:visibility="visible">



                    <LinearLayout
                        android:id="@+id/layout_employment_information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="Employment Info"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_right_arrow_green"
                            app:tint="@color/colorPrimaryDark"
                            android:rotation="90"/>



                    </LinearLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_employment_info"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dimen_5dp"
                        android:paddingStart="5dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="10dp"
                        android:visibility="visible"
                        app:layout_constraintTop_toBottomOf="@id/layout_employment_information">

                        <FrameLayout
                            android:id="@+id/layout_employment_info_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:text="Employment Information"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/edit_employment_info"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="end"
                                android:src="@android:drawable/ic_menu_edit" />


                        </FrameLayout>

                        <View
                            android:id="@+id/viewE"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="4dp"
                            android:background="#F9F7FE"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/layout_employment_info_title" />

                        <LinearLayout
                            android:id="@+id/layout_employer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toSxtartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/viewE">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/dimen_10dp"
                                android:text="Employer :"
                                android:textStyle="bold"
                                android:textSize="11sp"
                                android:textColor="@color/textColor" />



                            <TextView
                                android:id="@+id/text_view_employer"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:alpha="1.0"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/dimen_10dp"
                                android:text="None"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_designation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="5dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/layout_employer">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/dimen_10dp"
                                android:text="Designation :"
                                android:textStyle="bold"
                                android:textSize="11sp"
                                android:textColor="@color/textColor" />


                            <TextView
                                android:id="@+id/text_view_designation"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:alpha="1.0"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/dimen_10dp"
                                android:text="None"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="5dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/layout_designation">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/dimen_10dp"
                                android:text="Location :"
                                android:textStyle="bold"
                                android:textSize="11sp"
                                android:textColor="@color/textColor" />



                            <TextView
                                android:id="@+id/text_view_location"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:alpha="1.0"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/dimen_10dp"
                                android:text="None"
                                android:textSize="11sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_employee_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="5dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/layout_location">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/dimen_10dp"
                                android:text="Employee ID :"
                                android:textStyle="bold"
                                android:textSize="11sp"
                                android:textColor="@color/textColor" />



                            <TextView
                                android:id="@+id/text_view_employee_id"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:alpha="1.0"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/dimen_10dp"
                                android:text="None"
                                android:textSize="11sp" />
                        </LinearLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <View
                        android:id="@+id/view4"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        app:layout_constraintTop_toBottomOf="@id/layout_employment_info"
                        app:layout_constraintBottom_toTopOf="@id/layout_business_information"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="@color/colorPrimary"
                        android:alpha=".79" />
                    <LinearLayout
                        android:id="@+id/layout_business_information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/view4">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="Business Info"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/card_view_employment_business_info"
                app:cardCornerRadius="5dp">
                <RelativeLayout
                    android:id="@+id/layout_cards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp">


                    <TextView
                        android:id="@+id/cards_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Cards"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:alpha="0.8"/>
                    <TextView
                        android:id="@+id/cards_sub_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/cards_title"
                        android:text="View your cards"
                        android:textSize="10sp"
                        android:textColor="#8C98A9"
                        android:textStyle="bold"
                        android:alpha="0.81"/>
                    <ImageView
                        android:id="@+id/chevron_cards"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_right_arrow_green"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_security"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/card_view_cards"
                app:cardCornerRadius="5dp">
                <RelativeLayout
                    android:id="@+id/layout_security"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp">


                    <TextView
                        android:id="@+id/security_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Security"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:alpha="0.8"/>
                    <TextView
                        android:id="@+id/security_sub_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/security_title"
                        android:text="Change Pin"
                        android:textSize="10sp"
                        android:textColor="#8C98A9"
                        android:textStyle="bold"
                        android:alpha="0.81"/>
                    <ImageView
                        android:id="@+id/chevron_security"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_right_arrow_green"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/layout_customer_support"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/card_view_security"
                app:cardCornerRadius="5dp">
                <RelativeLayout
                    android:id="@+id/layout_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp">


                    <TextView
                        android:id="@+id/help_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="FAQ\'s &amp; Help"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:alpha="0.8"/>
                    <ImageView
                        android:id="@+id/chevron_help"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_right_arrow_green"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_terms_conditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/layout_customer_support"
                app:cardCornerRadius="5dp">
                <RelativeLayout
                    android:id="@+id/layout_terms_conditions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp">


                    <TextView
                        android:id="@+id/terms_conditions_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Terms and Conditions"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:alpha="0.8"/>
                    <ImageView
                        android:id="@+id/chevron_terms_conditions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_right_arrow_green"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/layout_app_info_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_below="@id/card_view_terms_conditions">
                <TextView
                    android:id="@+id/label_app_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:maxLines="1"
                    android:text="App Version : "
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/text_app_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="1.0"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:layout_toEndOf="@id/label_app_version"/>
                <TextView
                    android:id="@+id/text_rate_share_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Rate or Share App"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                android:layout_below="@id/layout_app_info_share">


            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button_dark_green"
                android:text="Logout"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="16sp" />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>