<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#DDF1FD">

    <ImageView
        android:src="@drawable/ic_new_bg_pattern"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:alpha=".05"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/account_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:maxLines="1"
                android:text="My Account"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />
            <RelativeLayout
                android:id="@+id/layout_account_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_below="@id/account_title">
            <TextView
                android:id="@+id/label_account_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:maxLines="1"
                android:text="Account Type : "
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />
                <TextView
                    android:id="@+id/text_account_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Merchant"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@id/label_account_type"/>
                <TextView
                    android:id="@+id/text_change_account_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Change"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_personal_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:layout_below="@id/layout_account_type"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                app:cardCornerRadius="20dp">
                <RelativeLayout
                    android:id="@+id/layout_personal_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp"
                    android:paddingTop="4dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/personal_info_img"
                        android:layout_width="97dp"
                        android:layout_height="107dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:padding="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">
                        <ImageView
                            android:id="@+id/user_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/user"
                            android:scaleType="centerCrop"/>
                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/personal_info_img"
                        android:text="Username "
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"
                        android:layout_marginBottom="5dp"/>
                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorPrimary"
                        android:alpha=".79"
                        android:layout_below="@id/user_name"
                        android:layout_toEndOf="@id/personal_info_img"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="10dp"/>
                    <TextView
                        android:id="@+id/user_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/view1"
                        android:layout_toEndOf="@id/personal_info_img"
                        android:layout_margin="12dp"
                        android:text="+256704 000 000"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:alpha="0.5"/>
                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorPrimary"
                        android:alpha=".79"
                        android:layout_below="@id/user_phone"
                        android:layout_toEndOf="@id/personal_info_img"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="10dp"/>
                    <TextView
                        android:id="@+id/user_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/view2"
                        android:layout_toEndOf="@id/personal_info_img"
                        android:text="Location"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:alpha="0.5"/>
                    <TextView
                        android:id="@+id/view_more_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="View More"
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@id/personal_info_img"
                        android:layout_below="@id/user_location"
                        android:drawableEnd="@drawable/drop_down"
                        android:drawablePadding="4dp"
                        android:drawableTint="@color/colorPrimary"
                        android:alpha="0.6"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_security_id_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@color/white"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/card_view_personal_info"
                app:cardCornerRadius="5dp">
                <RelativeLayout
                    android:id="@+id/layout_security_id_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp">


                    <TextView
                        android:id="@+id/security_id_info_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Security "
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:alpha="0.8"/>
                    <ImageView
                        android:id="@+id/chevron_security_id_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_right_arrow_green"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_payment_methods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/card_view_security_id_info"
                app:cardCornerRadius="5dp">
                <RelativeLayout
                    android:id="@+id/layout_payment_methods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp">


                    <TextView
                        android:id="@+id/payment_methods_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Payment Methods"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:alpha="0.8"/>
                    <ImageView
                        android:id="@+id/chevron_payment_methods"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_right_arrow_green"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_faqs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/card_view_payment_methods"
                app:cardCornerRadius="5dp">
                <RelativeLayout
                    android:id="@+id/layout_faqs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp">


                    <TextView
                        android:id="@+id/faqs_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="FAQ\'s"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:alpha="0.8"/>
                    <ImageView
                        android:id="@+id/chevron_faqs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_right_arrow_green"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/layout_customer_support"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/card_view_faqs"
                app:cardCornerRadius="5dp">
                <RelativeLayout
                    android:id="@+id/layout_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp">


                    <TextView
                        android:id="@+id/help_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Help"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:alpha="0.8"/>
                    <ImageView
                        android:id="@+id/chevron_help"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_right_arrow_green"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_terms_conditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/layout_customer_support"
                app:cardCornerRadius="5dp">
                <RelativeLayout
                    android:id="@+id/layout_terms_conditions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp">


                    <TextView
                        android:id="@+id/terms_conditions_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Terms and Conditions"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:alpha="0.8"/>
                    <ImageView
                        android:id="@+id/chevron_terms_conditions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_right_arrow_green"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/layout_app_info_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_below="@id/card_view_terms_conditions">
                <TextView
                    android:id="@+id/label_app_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:maxLines="1"
                    android:text="App Version : "
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/text_app_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="1.0"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:layout_toEndOf="@id/label_app_version"/>
                <TextView
                    android:id="@+id/text_rate_share_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Rate or Share App"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                android:layout_below="@id/layout_app_info_share">


            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button_dark_green"
                android:text="Logout"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="16sp" />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>