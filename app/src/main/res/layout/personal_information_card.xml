<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:id="@+id/layout_id_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personal Information"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:src="@android:drawable/ic_menu_edit"/>



    </FrameLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/layout_id_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:background="@color/gray_gray" />
    <LinearLayout
        android:id="@+id/layout_id_type"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:src="@android:drawable/ic_menu_my_calendar"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dimen_10dp"
            android:layout_weight=".6"
            android:text="Date of Birth"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:text=":"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"  />
        <TextView
            android:id="@+id/text_view_id_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dimen_10dp"
            android:layout_weight="1"
            android:text="27 Nov 1987"
            android:alpha="1.0"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_id_number"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/layout_id_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:src="@android:drawable/ic_menu_my_calendar"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dimen_10dp"
            android:layout_weight=".6"
            android:text="Gender"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:text=":"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"  />
        <TextView
            android:id="@+id/text_view_id_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dimen_10dp"
            android:layout_weight="1"
            android:text="Male"
            android:alpha="1.0"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_expiry_date"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/layout_id_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:src="@android:drawable/ic_menu_my_calendar"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dimen_10dp"
            android:layout_weight=".6"
            android:text="N.O.K"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:text=":"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"  />
        <TextView
            android:id="@+id/text_view_expiry_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dimen_10dp"
            android:layout_weight="1"
            android:text="John Mugwanya"
            android:alpha="1.0"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_nok_contact"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/layout_expiry_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:src="@android:drawable/ic_menu_my_calendar"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dimen_10dp"
            android:layout_weight=".6"
            android:text="N.O.K Contact"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:text=":"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"  />
        <TextView
            android:id="@+id/text_view_purchase_service"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dimen_10dp"
            android:layout_weight="1"
            android:text="Food Purchase"
            android:alpha="1.0"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:gravity="center_vertical"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>