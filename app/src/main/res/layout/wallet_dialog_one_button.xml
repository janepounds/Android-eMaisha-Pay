<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/solidwhite_shape"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_marginRight="@dimen/dimen_10dp"
    android:layout_marginLeft="@dimen/dimen_10dp"
    android:paddingBottom="@dimen/dimen_10dp"
    android:paddingTop="@dimen/dimen_10dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/checked" />

    <TextView
        android:id="@+id/dlg_one_button_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/josefin_sans"
        android:gravity="center"
        android:maxLines="1"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="SUCCESS!" />

    <TextView
        android:id="@+id/dlg_one_button_tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/josefin_sans"
        android:textSize="16sp"
        tools:text="Account activated!" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <Button
            android:id="@+id/dlg_one_button_btn_ok"
            style="@style/Button_DW"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:background="@drawable/solidbtn_shape"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            tools:text="OK"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>